<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="601.0"
      prefWidth="1172.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainPackage.OrderConfirmORInfoViewController">
    <VBox prefHeight="602.0" prefWidth="66.0">
        <Button id="backIcon" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                onAction="#onGoBackButtonClick" prefHeight="40.0" prefWidth="40.0">
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <VBox alignment="TOP_CENTER" prefHeight="602.0" prefWidth="935.0" HBox.hgrow="ALWAYS">
        <HBox.margin>
            <Insets left="30.0" right="50.0"/>
        </HBox.margin>
        <VBox alignment="TOP_CENTER" maxWidth="1019.0" prefHeight="302.0" prefWidth="1011.0">
            <Label fx:id="orderIDField" prefHeight="27.0" prefWidth="990.0" style="-fx-alignment: left;"
                   text="OrderID :">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="nameField" prefHeight="27.0" prefWidth="990.0" style="-fx-alignment: left;"
                   text="Name" VBox.vgrow="NEVER">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="phoneField" prefHeight="27.0" prefWidth="990.0" style="-fx-alignment: left;"
                   text="Phone">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <Label fx:id="totalField" prefHeight="27.0" prefWidth="990.0" style="-fx-alignment: left;"
                   text="Total :">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <TextArea fx:id="addressField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0"
                      prefWidth="850.0" text="Address :">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </TextArea>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label fx:id="statusLabel" prefHeight="22.0" prefWidth="367.0"
                       style="-fx-font-size: 15; -fx-alignment: left; -fx-text-fill: red;"
                       text="I agree that all the information provided here is correct" textFill="#fa2c2c"
                       HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="10.0"/>
                    </HBox.margin>
                </Label>
                <CheckBox fx:id="agreedCheckBox" mnemonicParsing="false" onAction="#agreedToCondition"
                          prefHeight="96.0" prefWidth="17.0"
                          style="-fx-text-fill: red; -fx-font-weight: 600;" HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </CheckBox>
                <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
                <Button fx:id="confirmButton" maxHeight="-Infinity" maxWidth="-Infinity"
                        minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#confirmOrder" prefHeight="40.0" prefWidth="288.0" text="Confirm Order"/>
            </HBox>
        </VBox>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <GridPane fx:id="gridoPain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="100.0" prefWidth="920.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
            </GridPane>
        </ScrollPane>
    </VBox>
</HBox>
